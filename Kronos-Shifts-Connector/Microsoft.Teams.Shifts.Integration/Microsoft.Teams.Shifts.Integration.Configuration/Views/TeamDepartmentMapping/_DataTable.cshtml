@model List<Microsoft.Teams.Shifts.Integration.Configuration.Models.TeamsDepartmentMappingViewModel>

<link href="../lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet"/>
<script src="../lib/datatables/js/jquery.dataTables.min.js"></script>
<form asp-controller="TeamDepartmentMapping" asp-action="SaveShiftsTeamKronosDepartmentMappingAsync" method="post" class="formToSubmit">
    <table id="teamDeptMappTbl" class="table table-responsive" style="margin-top: 80px;">
        <thead>
            <tr>
                <th>Kronos Workforce Integration Id</th>
                <th>Kronos Org Job Path</th>
                <th>Kronos Time Zone</th>
                <th>Shifts Team Name</th>
                <th>Shifts Team Id</th>
                <th>Schedule Group Id</th>
                <th>Schedule Group Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count != 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkforceIntegrationId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.KronosOrgJobPath)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.KronosTimeZone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShiftsTeamName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TeamId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TeamsScheduleGroupId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TeamsScheduleGroupName)
                        </td>
                        <td>
                            <input type="button" value="Delete" class="btn btn-primary deleteBtnUserMapp" onclick="ajaxCallDeleteTeamDeptMapping('@item.WorkforceIntegrationId', '@item.KronosOrgJobPath', this)" />
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td style="text-align:center;" colspan="6">
                        No Records found
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        $("#teamDeptMappTbl").dataTable({
            "columnDefs": [{
                "defaultContent": "-",
                "targets": "_all"
            }]
        });
    });
</script>